<Window x:Class="SortingVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sorting Visualizer" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Control panel -->
            <RowDefinition Height="*"/>
            <!-- Visualization area -->
        </Grid.RowDefinitions>

        <!-- Control panel -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
            <!-- Algorithm selection -->
            <ComboBox x:Name="AlgorithmComboBox" Width="150" Margin="5"/>
            <!-- Array size -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Array Size:" VerticalAlignment="Center" Margin="5"/>
                <Slider x:Name="ArraySizeSlider" Minimum="10" Maximum="200" Value="50" Width="150" Margin="5"/>
                <TextBox x:Name="ArraySizeTextBox" 
                         Text="{Binding ElementName=ArraySizeSlider, Path=Value, Mode=TwoWay}" 
                         Width="50" Margin="5"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Speed (ms):" VerticalAlignment="Center" Margin="5"/>
                <Slider x:Name="SpeedSlider" Minimum="1" Maximum="1000" Value="100" Width="150" Margin="5"/>
                <TextBox x:Name="SpeedTextBox" 
             Text="{Binding ElementName=SpeedSlider, Path=Value, Mode=TwoWay}" 
             Width="50" Margin="5"/>
            </StackPanel>

            <!-- Buttons -->
            <Button x:Name="StartButton" Content="Start" Width="100" Margin="5"/>
            <Button x:Name="ResetButton" Content="Reset" Width="100" Margin="5"/>
        </StackPanel>

        <!-- Visualization area -->
        <Canvas x:Name="ArrayCanvas" Grid.Row="1" Background="LightGray"/>
    </Grid>
</Window>
